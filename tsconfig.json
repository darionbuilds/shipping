{
  "ts-node": {
    "compilerOptions": {
      "baseUrl": "src",
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "esnext",
    // "bun-types" is the important part
    "types": [
      "bun-types",
      "node"
    ]
  },
  "include": [
    "/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}